@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Entre em contato conosco</h1>
</div>
<main>
    <div class="container">
        <div class="row">
            <div class="col-sm formContat">
                <form class="needs-validation" novalidate action="https://formsubmit.co/appacecidade@gmail.com" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Endereço de email</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1"
                            placeholder="nome@exemplo.com" required>
                        <div class="invalid-feedback">Digite seu email corretamente!</div>    
                    </div>
                    <div class="form-group">
                        <label for="Assunto">Assunto</label>
                        <input type="text" class="form-control" id="Assunto" placeholder="Informe o assunto do contato" required>
                        <div class="invalid-feedback">Digite o assunto do seu contato!</div>
                    </div>
                    <div class="form-group">
                        <label for="SelectFeedback">Selecione o FeedBack</label>
                        <select class="form-control" id="SelectFeedback">
                            <option>Reportar um erro</option>
                            <option>Sugestões</option>
                            <option>Inlusão de estabelecimento</option>
                            <option>Reclamações</option>
                        </select>
                        <div class="invalid-feedback">Selecione uma opção!</div>
                    </div>

                    <div class="form-group">
                        <label for="DescricaoForm">Descrição</label>
                        <textarea class="form-control" id="DescricaoForm" rows="3"></textarea>
                        <div class="invalid-feedback">Digite os dados corretamente!</div>
                    </div>
                    <div class="form-group">
                        <label for="Anexo1">Selecione um anexo</label>
                        <input type="file" class="form-control-file" id="Anexo1">
                    </div>
                    <div><button class="btn btn-outline-primary" type="submit">Enviar</button>
                    </div>
                </form>
            </div>
            <div class="col-sm">
                <img src="~/IMG/Acecidade.png" alt="logo">
            </div>
        </div>
    </div>
</main>
