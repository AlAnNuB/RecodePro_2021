
public class Bebida {
	private String tipo;
	private String marca;
	private double tamanho;
	
	public void setar(String tipo, String marca, double tamanho) {
		this.tipo = tipo;
		this.marca = marca;
		this.tamanho = tamanho;
	}
	
	public void getAtributos() {
		System.out.println("--------------------------------");
		System.out.println("A bebida é : " + tipo);
		System.out.println("A marca é: " + marca);
		System.out.println("O tamanho dela é: " + tamanho + " cm");
		System.out.println("--------------------------------");
	}
	
