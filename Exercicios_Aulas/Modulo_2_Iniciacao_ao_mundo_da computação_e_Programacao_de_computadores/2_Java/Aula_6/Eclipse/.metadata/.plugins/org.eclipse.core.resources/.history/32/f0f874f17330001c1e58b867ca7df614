
public class Pao {
	private String tipo;
	private double peso;
	private double valor;
	
	
	public void setarPao(String tipo, double peso, double valor) {
		this.tipo = tipo;
		this.peso = peso;
		this.valor = valor;
	}
	
	public void getAtributosPao() {
		System.out.println("--------------------------------");
		System.out.println("A Pão é : " + tipo);
		System.out.println("O peso é: " + peso + " Kg");
		System.out.println("O Preço é: R$ " + valor);
		System.out.println("--------------------------------");
	}
	
