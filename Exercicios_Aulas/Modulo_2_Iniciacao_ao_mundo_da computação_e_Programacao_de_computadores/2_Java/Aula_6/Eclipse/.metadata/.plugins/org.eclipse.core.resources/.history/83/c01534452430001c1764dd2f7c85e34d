
public class Bebida {
	private String tipo;
	private String marca;
	private double tamanho;
	
	
	
	public String getTipoBebida() {
		return tipo;
	}
	public void setTipoBebida(String tipo) {
		this.tipo = tipo;
	}
	public String getMarcaBebida() {
		return marca;
	}
	public void setMarcaBebida(String marca) {
		this.marca = marca;
	}
	public boolean isTamanhoBebida() {
		return tamanho;
	}
	public void setTamanhoBebida(boolean tamanho) {
		this.tamanho = tamanho;
	}
	
	public void retornoBebida() {
		System.out.println("A bebida é : " + tipo);
		System.out.println("A marca é: " + marca);
		System.out.println("O tamanho dela é: " + tamanho);
	}

}
