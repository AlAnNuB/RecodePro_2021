		lampada = scan.nextInt();
		
		if (lampada == 1) {
			System.out.println("A lampada est치 Ligada!");
		}else if (lampada == 2){
			System.out.println("A lampada est치 Apagada!");
		}else {
			System.out.println("Valor inv치lido! ");
		}
		}while(lampada != 1 || lampada != 2);
